<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIecommerce.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIecommerce"
    xmlns:views="clr-namespace:MAUIecommerce.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUIecommerce">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="InventoryManagement" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="ShopManagement" />
    <ShellContent
        Title="Product View"
        ContentTemplate="{DataTemplate views:ProductDetail}"
        Route="Product" />

</Shell>
